NODE_ENV=production
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<database>?retryWrites=true&w=majority
JWT_SECRET=CHANGE_ME_WITH_A_STRONG_SECRET
JWT_EXPIRE=30d

# App URLs
FRONTEND_URL=https://chefetoile-frontend-production.up.railway.app
BACKEND_URL=https://chefetoile-backend-production.up.railway.app
FRONTEND_AUTH_CALLBACK=/login
COOKIE_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET
SESSION_COOKIE_NAME=chefetoile_session
COOKIE_SECURE=true

# SMTP (reset mot de passe)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="ChefEtoile <no-reply@chefetoile.com>"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://chefetoile-backend-production.up.railway.app/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URI=https://chefetoile-backend-production.up.railway.app/auth/facebook/callback

# Apple Sign-In
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
APPLE_REDIRECT_URI=https://chefetoile-backend-production.up.railway.app/auth/apple/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://chefetoile-backend-production.up.railway.app/auth/github/callback
